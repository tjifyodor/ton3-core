{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "lib": [
            "ES2020",
            "ESNEXT",
            "DOM"
        ],
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "ts-node": {
        "transpileOnly": true
    },
    "include": ["./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
